{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "syllabify",
  "title": "Syllabify",
  "description": "Uses Raycast AI to syllabify words.",
  "icon": "command-icon.png",
  "author": "solberg",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Syllabify",
      "description": "Break a given word into it's individual syllables.",
      "mode": "view",
      "arguments": [
        {
          "name": "word",
          "placeholder": "Word",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.8",
    "hyphen": "^1.6.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/hyphen": "^1.6.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
